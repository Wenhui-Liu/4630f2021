<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativelayout_factsmyinfo_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scaleType="centerCrop"
    android:background="@drawable/background3">

    <TextView
        android:id="@+id/factsmy_page_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wenhui Liu"
        android:textColor="#eeeeee"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"/>
    <TextView
        android:id="@+id/factsmy_page_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="◇ Place of birth:"
        android:textColor="#eeeeee"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:layout_marginTop="56dp"
        android:layout_marginLeft="24dp"
        android:layout_below="@id/factsmy_page_text_title"/>
    <TextView
        android:id="@+id/factsmy_page_answer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hohhot, China"
        android:textColor="#eeeeee"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="56dp"
        android:layout_marginRight="24dp"
        android:layout_below="@id/factsmy_page_text_title"
        android:layout_alignParentRight="true"/>
    <TextView
        android:id="@+id/factsmy_page_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="◇ Hobbies:"
        android:textColor="#eeeeee"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="24dp"
        android:layout_below="@id/factsmy_page_text1"/>
    <TextView
        android:id="@+id/factsmy_page_answer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Swimming, Drawing"
        android:textColor="#eeeeee"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="48dp"
        android:layout_marginRight="24dp"
        android:layout_below="@id/factsmy_page_text1"
        android:layout_alignParentRight="true"/>
    <TextView
        android:id="@+id/factsmy_page_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="◇ Where I live now:"
        android:textColor="#eeeeee"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="24dp"
        android:layout_below="@id/factsmy_page_text2"/>

    <TextView
        android:id="@+id/factsmy_page_answer3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/factsmy_page_text2"
        android:layout_alignParentRight="true"
        android:layout_marginTop="48dp"
        android:layout_marginRight="24dp"
        android:text="Lowell, MA, US"
        android:textColor="#eeeeee"
        android:textSize="20sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/factsmy_page_text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="◇ Where I’d like to live:"
        android:textColor="#eeeeee"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="24dp"
        android:layout_below="@id/factsmy_page_text3"/>
    <TextView
        android:id="@+id/factsmy_page_answer4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shanghai, China"
        android:textColor="#eeeeee"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="48dp"
        android:layout_marginRight="24dp"
        android:layout_below="@id/factsmy_page_text3"
        android:layout_alignParentRight="true"/>
</RelativeLayout>