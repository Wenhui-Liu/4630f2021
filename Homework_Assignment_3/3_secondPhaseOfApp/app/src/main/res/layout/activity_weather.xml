<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativelayout_weather_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scaleType="centerCrop"
    android:background="@drawable/background2">

    <TextView
        android:id="@+id/weather_page_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/weather_txt_title"
        android:textColor="#1a237e"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="56dp"/>
    <TextView
        android:id="@+id/weather_page_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="✎ I am now:"
        android:textColor="#5d4037"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:layout_marginTop="42dp"
        android:layout_marginLeft="24dp"
        android:layout_below="@id/weather_page_text_title"/>
    <TextView
        android:id="@+id/weather_page_answer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lowell, MA ,US"
        android:textColor="#5d4037"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:layout_below="@id/weather_page_text1"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/weather_page_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="✎ I’d like to be"
        android:textColor="#5d4037"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="24dp"
        android:layout_below="@id/weather_page_text1"/>
    <TextView
        android:id="@+id/weather_page_answer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Database Analyst / Administrator"
        android:textColor="#5d4037"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:layout_below="@id/weather_page_text2"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/weather_page_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="✎ I am from:"
        android:textColor="#5d4037"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="24dp"
        android:layout_below="@id/weather_page_text2"/>
    <TextView
        android:id="@+id/weather_page_answer3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hohhot, Inner Mongolia, China"
        android:textColor="#5d4037"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:layout_below="@id/weather_page_text3"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/weather_page_text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="✎ My family is from:"
        android:textColor="#5d4037"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="24dp"
        android:layout_below="@id/weather_page_text3"/>
    <TextView
        android:id="@+id/weather_page_answer4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hohhot, Inner Mongolia, China"
        android:textColor="#5d4037"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:layout_below="@id/weather_page_text4"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/weather_page_text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="✎ What my hometown looks like:"
        android:textColor="#5d4037"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="24dp"
        android:layout_below="@id/weather_page_text4"/>
    <Button
        android:id="@+id/weather_page_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="show"
        android:textSize="20sp"
        android:textColor="#e0e0e0"
        android:backgroundTint="#8d6e63"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_below="@id/weather_page_text5"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>