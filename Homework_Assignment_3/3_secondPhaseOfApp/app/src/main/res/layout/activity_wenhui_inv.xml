<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativelayout_investment_page_my"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scaleType="centerCrop"
    android:background="@drawable/background4">
    <TextView
        android:id="@+id/investment_page_my_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is Wenhui's Investment Portfolio"
        android:textColor="#5d4037"
        android:textSize="36sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"/>
    <ImageView
        android:id="@+id/investment_page_my_image"
        android:layout_width="500dp"
        android:layout_height="300dp"
        android:src="@drawable/my_investment"
        android:backgroundTint="#ffe57f"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"
        android:layout_below="@id/investment_page_my_text_title"/>
</RelativeLayout>
