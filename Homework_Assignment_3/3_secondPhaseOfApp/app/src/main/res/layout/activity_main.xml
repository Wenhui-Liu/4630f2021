<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hw2_linearlayout"
    android:background="#81d4fa"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView
        android:id="@+id/hw2_text1"
        android:text="@string/hw2_textview1"
        android:textColor="#303f9f"
        android:textSize="35sp"
        android:textStyle="italic"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:padding="20dp" />

    <ImageView
        android:id="@+id/hw2_image1"
        android:src="@drawable/selfie"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="8dp" />

    <Button
        android:id="@+id/hw2_button1"
        android:text="@string/hw2_btn_aboutme"
        android:textSize="24sp"
        android:backgroundTint="#dce775"
        android:textColor="#689f38"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_marginBottom="10dp" />
</LinearLayout>